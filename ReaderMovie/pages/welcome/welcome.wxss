page{
  height:100%;
  background-color: #a3d8e4;
}

.container {
  padding-top: 300rpx;
}

.avatar {
  display: block;
  margin: 0 auto 60rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.name {
  margin-bottom: 100rpx;
  display: block;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.btn {
  margin: 0 auto;
  padding: 10rpx;
  display: block;
  width: 240rpx;
  text-align: center;
  font-size: 30rpx;
  border: 1rpx solid #000;
  border-radius: 5px;
}
